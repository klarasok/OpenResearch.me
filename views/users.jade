extends layouts/default

block content
  h2 List of Users

  each user in users
    a.ui.card.fluid.link(href="/users/#{user._id}")
      .content
        h3.header #{user.username}

  h3 Sign Up
  form.ui.form(method="POST", action="/users")
    .field
      label(for="username") Username
      input(type="text", name="username")
    .field
      label(for="username") Email
      input(type="text", name="email")
    .field
      label(for="username") Password
      input(type="password", name="password")
        
    .field
      button.ui.button.primary(type="submit") Get Started
    
    a.ui.button
      i.icon.twitter
      | sign in with Twitter
